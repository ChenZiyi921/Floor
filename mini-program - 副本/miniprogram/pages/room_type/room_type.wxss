/* pages/room_type/room_type.wxss */
.container {
  padding: 0rpx 30rpx 30rpx;
  min-height: 100vh;
  background: #f9f9f9;
  box-sizing: border-box;
  color: #333;
}
.title {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 80rpx;
  background: #4187f2;
  border-radius: 8px 8px 0px 0px;
  font-size: 34rpx;
  color: #fff;
}
.item {
  padding: 20rpx 0rpx;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
}
.item .label {
  font-size: 34rpx;
  color: #333;
  padding: 6rpx 0;
  text-align: center;
}
.item .date {
  font-size: 28rpx;
  color: #777;
  padding: 6rpx 0;
  text-align: center;
}
.image {
  margin-top: 12rpx;
}
