<!-- index.wxml -->
<view class="container">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" circular="{{circular}}" interval="{{interval}}" duration="{{duration}}" style="height:{{height}}">
    <block>
      <swiper-item>
        <image src="../../img/index/banner1.jpg" class="swiper-item" mode="widthFix" bindload='goheight'></image>
      </swiper-item>
      <swiper-item>
        <image src="../../img/index/banner2.jpg" class="swiper-item" mode="widthFix" bindload='goheight'></image>
      </swiper-item>
    </block>
  </swiper>
  <view class="item" wx:for="{{data}}" wx:for-item="item">
    <view class="title">0015地块</view>
    <view class="block">
      <view class="text" wx:for="{{item.list}}" bindtap="toUnitList" data-params="{{item}}">
        <text>{{item.name}}</text>
      </view>
    </view>
  </view>
</view>